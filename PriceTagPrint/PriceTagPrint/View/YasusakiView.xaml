<Window x:Class="PriceTagPrint.View.YasusakiView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PriceTagPrint.View"
        xmlns:vm="clr-namespace:PriceTagPrint.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ヤスサキ" Height="600" Width="950">
    <Window.DataContext>
        <vm:YasusakiViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ContentText" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="TitleButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
        <Style x:Key="FkeyButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Meiryo UI"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="1" Text="発行区分" Style="{StaticResource TitleText}"/>
            <ComboBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" x:Name="HakkouTypeComboBox"
                      ItemsSource="{Binding HakkouTypeItems.Value, Mode=OneWay}"
                      SelectedIndex="{Binding SelectedHakkouTypeIndex.Value}"
                      DisplayMemberPath="Name"/>

            <TextBlock Grid.Row="1" Grid.Column="5" Text="分類コード" Style="{StaticResource TitleText}"/>
            <ComboBox Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" x:Name="BunruiCodeComboBox" 
                      ItemsSource="{Binding BunruiCodeItems.Value, Mode=OneWay}"
                      SelectedIndex="{Binding SelectedBunruiCodeIndex.Value}"
                      DisplayMemberPath="Name"/>

            <TextBlock Grid.Row="3" Grid.Column="1" Text="発注番号" Style="{StaticResource TitleText}"/>
            <TextBox Grid.Row="3" Grid.Column="2" x:Name="HachuNumberTextBox" 
                     Text="{Binding HachuBangou.Value, Mode=OneWay}"/>

            <TextBlock Grid.Row="3" Grid.Column="5" Text="値札番号" Style="{StaticResource TitleText}"/>
            <ComboBox Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" x:Name="NefudaBangouComboBox" 
                      ItemsSource="{Binding NefudaBangouItems.Value, Mode=OneWay}"
                      SelectedIndex="{Binding SelectedNefudaBangouIndex.Value}"
                      DisplayMemberPath="Name"/>


        </Grid>
        <Grid Grid.Row="1" x:Name="HinGrid" IsEnabled="{Binding HinEnabled.Value}">
            <Grid.RowDefinitions>                
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Text="商品コード" Style="{StaticResource TitleText}" />
            <TextBox Grid.Column="2" Text="{Binding SttHincd.Value}" Style="{StaticResource ContentText}" />
            <TextBox Grid.Column="3" Text="{Binding SttEdaban.Value}" Style="{StaticResource ContentText}" />
            <TextBlock Grid.Column="4" Text="～" Style="{StaticResource TitleText}"/>
            <TextBox Grid.Column="5" Text="{Binding EndHincd.Value}" Style="{StaticResource ContentText}" />
            <TextBox Grid.Column="6" Text="{Binding EndEdaban.Value}" Style="{StaticResource ContentText}" />
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <DataGrid
			    Grid.Row="1"
			    HorizontalAlignment="Left"
			    Margin="28,0,0,0"
			    x:Name="ResultDataGrid"
			    VerticalAlignment="Top"
			    Background= "#C5FFFFFF"
			
			    ItemsSource="{Binding YasusakiItems.Value}"
			    AutoGenerateColumns="True"
			    IsReadOnly="True"
			    CanUserAddRows="false"
			    CanUserDeleteRows="False"
			    CanUserSortColumns="False">
            </DataGrid>
        </Grid>

        <Grid Grid.Row="3" ShowGridLines="True" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="ESC&#xa;終了" Style="{StaticResource FkeyButton}" Visibility="Visible"/>
            <Button Grid.Column="1" Content="F1" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="2" Content="F2" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="3" Content="F3" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="4" Content="F4" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="5" Content="F5&#xa;検索" Style="{StaticResource FkeyButton}" Visibility="Visible" Click="F5Action"/>
            <Button Grid.Column="6" Content="F6" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="7" Content="F7" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="8" Content="F8" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="9" Content="F9" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="10" Content="F10" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="11" Content="F11" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="12" Content="F12" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
            <Button Grid.Column="13" Content="F13" Style="{StaticResource FkeyButton}" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
